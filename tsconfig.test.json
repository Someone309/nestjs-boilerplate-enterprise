{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist-test",
    "rootDir": ".",
    // Relaxed for test files
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "include": ["src/**/*.ts", "src/**/*.spec.ts", "src/**/*.test.ts", "test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
